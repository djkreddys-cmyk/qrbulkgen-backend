generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
}

model QRCode {
  id          Int      @id @default(autoincrement())
  type        String
  shortCode   String   @unique
  destination String
  scanCount   Int      @default(0)
  createdAt   DateTime @default(now())
}